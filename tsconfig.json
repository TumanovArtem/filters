{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "store/*": ["store/*"],
      "types/*": ["types/*"],
      "hoc/*": ["hoc/*"],
    }
  }
}